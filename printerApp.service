[Unit]
Description=Print received weight and messages.
Wants=network-online.target
After=network.target network-online.target rc-local.service
[Service]
ExecStart=sudo -u pi python3 /home/pi/houdini_thermoprinter/main.py &
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=1
DefaultStartLimitIntervalSec=0
StartLimitBurst=99
#restart periodically
#RuntimeMaxSec=600
User=pi
[Install]
WantedBy=multi-user.target
